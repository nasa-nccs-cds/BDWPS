# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /cwt/file                   controllers.WPS.getResultFile( id: String, service: String ?= "cds2" )
GET     /cwt/result                 controllers.WPS.getResult( id: String, service: String ?= "cds2" )
GET     /cwt/status                 controllers.WPS.getResultStatus( id: String, service: String ?= "cds2" )
GET     /cwt                        controllers.WPS.execute( version: String ?= "1.0.0", request: String, identifier: String ?= "", service: String ?= "cds2", storeExecuteResponse: String ?= "true", status: String ?= "false", datainputs: String ?= "" )

GET     /wps/cwt/file               controllers.WPS.getResultFile( id: String, service: String ?= "cds2" )
GET     /wps/cwt/result             controllers.WPS.getResult( id: String, service: String ?= "cds2" )
GET     /wps/cwt/status             controllers.WPS.getResultStatus( id: String, service: String ?= "cds2" )
GET     /wps/cwt                    controllers.WPS.execute( version: String ?= "1.0.0", request: String, identifier: String ?= "", service: String ?= "cds2", storeExecuteResponse: String ?= "true", status: String ?= "false", datainputs: String ?= "" )

GET        /count                   demo.HelloController.count

