# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET     /wps/file                   controllers.WPS.getResultFile( id: String, service: String ?= "cds2" )
GET     /wps/result                controllers.WPS.getResult( id: String, service: String ?= "cds2" )
GET     /wps/status                controllers.WPS.getResultStatus( id: String, service: String ?= "cds2" )
GET     /wps                        controllers.WPS.execute( version: String ?= "1.0.0", request: String, identifier: String ?= "", service: String ?= "cds2", storeExecuteResponse: String ?= "true", status: String ?= "false", datainputs: String ?= "" )

GET        /count                   demo.HelloController.count

